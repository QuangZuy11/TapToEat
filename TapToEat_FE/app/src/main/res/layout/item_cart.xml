<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Menu Item Image -->
        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_light" />

        <!-- Item Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <!-- Item Name -->
            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phở Bò"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Item Price -->
            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50,000 đ"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Notes -->
            <TextView
                android:id="@+id/tvCartItemNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú: Không hành"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone" />

            <!-- Quantity Controls and Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/quantity_background"
                    android:padding="2dp">

                    <!-- Decrease Button -->
                    <ImageView
                        android:id="@+id/btnDecreaseQuantity"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_remove"
                        android:padding="6dp"
                        android:background="@drawable/quantity_button_background"
                        app:tint="@color/white" />

                    <!-- Quantity -->
                    <TextView
                        android:id="@+id/tvCartItemQuantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"
                        android:gravity="center" />

                    <!-- Increase Button -->
                    <ImageView
                        android:id="@+id/btnIncreaseQuantity"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_add"
                        android:padding="6dp"
                        android:background="@drawable/quantity_button_background"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Item Total Price -->
                <TextView
                    android:id="@+id/tvCartItemTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100,000 đ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange" />

            </LinearLayout>
        </LinearLayout>

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/btnDeleteItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="top"
            app:tint="@color/gray" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
